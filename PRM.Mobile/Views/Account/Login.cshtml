@using EO.Pdf.Internal
@model PatientPortal.Mobile.Models.LoginModel

@{
    ViewBag.Title = "CareBlue Patient Portal";
    var practiceName = string.IsNullOrEmpty(Model.Practice) ? "Not Available" : Model.Practice;
}

@section Header {
    @*@Html.ActionLink("Cancel", "Index", "Home", null, new { data_icon = "arrow-l", data_rel = "back" })*@
    <h1>@ViewBag.Title</h1>
}


@using (Html.BeginForm())
{

    @Html.ValidationSummary()

    <ul data-role="listview" data-inset="true">
        <li data-role="list-divider">Login to Your Account</li>


        @if (!string.IsNullOrEmpty(Model.Practice))
        {
            <li data-role="fieldcontain">
                @Html.LabelFor(m => m.Practice, new { @class = "ui-input-text", style = "float: left;" })
                <div align="center">
                    @practiceName
                </div>
            </li>
        }


        <li data-role="fieldcontain">
            @Html.LabelFor(m => m.AccountID)
            @Html.TextBoxFor(m => m.AccountID, new { maxlength = 10 })
        </li>
        <li data-role="fieldcontain">
            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName)
        </li>
        <li data-role="fieldcontain">
            @Html.LabelFor(m => m.Pin)
            @Html.TextBoxFor(m => m.Pin, new { placeholder = "If not known, last 4 of SSN may be used" })
        </li>

        <li data-role="fieldcontain">
            <input type="submit" value="Login" />
        </li>
    </ul>
}

@section Scripts {

}